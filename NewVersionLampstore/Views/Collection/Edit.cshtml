@model NewVersionLampstore.Models.Collection

@{
    ViewBag.Title = string.Format("Редактирование коллекции | {0}", NewVersionLampstore.Constants.TITLE);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>@Html.ActionLink("Отмена", "GetCollectionInCategory", "Collection", new { category = Model.Category.ShortName, collection = Model.ShortName }, null)</p>
<h2>Редактирование коллекции</h2>

@using (Html.BeginForm())
{
    @Html.EditorForModel()

    <input type="submit" value="Зберегти" />
}